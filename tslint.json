{
  "extends": "tslint-config-airbnb",
  "rules": {
    "semicolon": false,
    "no-any": false,
    "indent": [true, "spaces"],
    "ter-arrow-parens": [true, "as-needed"],
    "jsdoc-format": true,
    "no-increment-decrement": false,
    "align": [false, "parameters"],
    "trailing-comma": [true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  }
}
